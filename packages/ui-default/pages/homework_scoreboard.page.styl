.page--homework_scoreboard
  .col--rank
    width: rem(60px)
    text-align: center
    border-right: 1px solid $table-border-color

  .col--user
    min-width: rem(100px)

  .col--stu_class
    width: rem(100px)

  .col--stu_name
    width: rem(100px)

  .col--total_score, .col--time
    width: rem(70px)
    text-align: center

  .col--problem, .col--record
    width: rem(70px)
    border-left: 1px solid $table-border-color
    text-align: center

  +mobile()
    .col--problem, .col--record
      display: none
